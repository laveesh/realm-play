{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*.ts",
                "/*.ts"
            ]
        },
        "lib": [
            "es5",
            "es6",
            "es2017"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "pretty": true,

    }
}